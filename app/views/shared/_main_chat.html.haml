.main-chat
  .header
    .header__group
      .header__group__name
        = @group.name
      .header__group__member
        Member iwaki
    = link_to "#", class: "header__edit" do
      edit

  .message-list
    = render @messages

  .form
    .form__box
      .form__box__newtext
        = form_for [@group, @message] do |f| 
          = f.text_field :text, class: 'form__box__newtext__textbox', placeholder: 'type a message'
          = f.label :image, class: 'form__box__newtext__image' do
            = icon('far', 'image')
            = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__box__newtext__send'