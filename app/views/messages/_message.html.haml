.message-list__message-box
  .message-list__message-box__name
    = message.user.name
    .message-list__message-box__name__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__message-box__text
    - if message.text.present?
      %p.message-list__message-box__text__img
        = message.text
    = image_tag message.image.url, class: 'message-list__message-box__text__image' if message.image.present?